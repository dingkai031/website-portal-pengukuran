  <body id="body-pd" class="bg-light">
    <header class="header shadow" id="header">
      <a class="header__toggle">
        <i class="bx bx-menu" id="header-toggle"></i>
      </a>

      <div style="display: flex; align-items: center; justify-content: s">
        <div class="header__img">
          <img src="/img/perfil.jpg" alt="" />
        </div>
      </div>
    </header>

    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
        <div>
          <a href="/maintenance" class="nav__logo">
            <i class="bx bx-analyse nav__logo-icon"></i>
            <span class="nav__logo-name"
              >Inspeksi dan <br />
              Maintenance K3</span
            >
          </a>
          <div class="nav__list">
            <a href="/maintenance" class="nav__link <%= jenisTempatQuery ? "" : "active" %>">
              <i class="bx bx-border-all"></i>
              <span class="nav__name">Dashboard</span>
            </a>
            <% if (foundJenisTempat !== null) { %>
				<% if (foundJenisTempat.jenis === "maintenancebengkel") { %>
					<a href="/maintenance/maintenancebengkel" class="nav__link <%= jenisTempatQuery === "maintenancebengkel" ? "active" : "" %>">
						<i class="bx bx-git-compare"></i>
						<span class="nav__name">Bengkel</span>
					</a>
				<% } %>
            <% }else { %>
				<a href="/maintenance/maintenancebengkel" class="nav__link <%= jenisTempatQuery === "maintenancebengkel" ? "active" : "" %>">
						<i class="bx bx-git-compare"></i>
						<span class="nav__name">Bengkel</span>
					</a>
			<% } %>
			<% if (foundJenisTempat !== null) { %>
				<% if (foundJenisTempat.jenis === "maintenancelab") { %>
				<a href="/maintenance/maintenancelab" class="nav__link <%= jenisTempatQuery === "maintenancelab" ? "active" : "" %>">
					<i class="bx bxs-wrench"></i>
					<span class="nav__name">Laboratorium</span>
				</a>
				<% } %>
			<% }else { %>
				<a href="/maintenance/maintenancelab" class="nav__link <%= jenisTempatQuery === "maintenancelab" ? "active" : "" %>">
					<i class="bx bxs-wrench"></i>
					<span class="nav__name">Laboratorium</span>
				</a>
			<% } %>
          </div>
        </div>

        <a href="/" class="nav__link">
          <i class="bx bx-log-out nav__icon"></i>
          <span class="nav__name">Kembali</span>
        </a>
      </nav>
    </div>
