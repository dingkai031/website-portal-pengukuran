                      <input
                        type="number"
                        class="form-control"
                        name="pencahayaanJumlahPencahayaanRusak"
                        id="pencahayaanJumlahPencahayaanRusak"
                        value="0"
                      />
                    </div>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th class="align-middle text-center min-width-100">
                              Sumber Getaran
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Pengukuran 1
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Pengukuran 2
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Pengukuran 3
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Rata-rata
                            </th>
                          </tr>
                        </thead>
                        <tbody id="wadahFormPencahayaan">
                          <tr id="tableRowRatarata">
                            <th class="text-center align-middle" colspan="4">
                              Total rata-rata
                            </th>
                            <td>
                              <input
                                type="text"
                                name="totalratarata"
                                id="totalratarata"
                                class="form-control"
                                value="0"
                                readonly
                              />
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Tutup
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <!-- ------------------------------------------------------------------------------------------------------------- -->
            <div class="modal fade" id="ventilasi" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">FORM VENTILASI</h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <div class="mb-3">
                      <label for="ventilasiRuangan" class="form-label"
