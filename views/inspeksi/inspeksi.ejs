<%- include("templateInspeksi/head") %>
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm h-100 pb-5">
        <div class="card-body">
          <h3 class="card-title fw-bolder fs-3 mb-4 d-flex align-items-center">
            Form Inspeksi
          </h3>
          <form
            action="/inspeksi/tambah"
            method="POST"
            spellcheck="false"
            autocomplete="off"
          >
            <!-- ======================================MODAL============================================================================ -->
            <div class="modal fade" id="iklimkerja" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                      FORM IKLIM KERJA
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th class="align-middle text-center min-width-100">
                              Usia
                            </th>
                            <th class="align-middle text-center min-width-100">
                              BB
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Lokasi Pengukuran
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Suhu Basah (<span>&#176;</span>C)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Suhu Kering (<span>&#176;</span>C)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Suhu Bola (<span>&#176;</span>C)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              WGBT(ISBB) (<span>&#176;</span>C)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              RH (%)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Beban Kerja (KG)
                            </th>
                          </tr>
                        </thead>
                        <tbody id="wadahFormIklimKerja"></tbody>
                      </table>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Tutup
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <!-- ------------------------------------------------------------------------------------------------------------- -->
            <div class="modal fade" id="getaran" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">FORM GETARAN</h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th class="align-middle text-center min-width-100">
                              No
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Sumber Getaran
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Percepatan (A)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Kecepatan (cm/s)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Perpindahan (mm)
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Frekuensi (Hz)
                            </th>
                          </tr>
                        </thead>
                        <tbody id="wadahFormGetaran"></tbody>
                      </table>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Tutup
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <!-- =============================================================================================================== -->
            <div class="modal fade" id="kebisingan" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">FORM KEBISINGAN</h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th class="align-middle text-center min-width-100">
                              Lokasi
                            </th>
                            <th
                              class="align-middle text-center min-width-100"
                              colspan="3"
                            >
                              Intensitas Bising
                            </th>
                            <th class="align-middle text-center min-width-100">
                              Rata-Rata
                            </th>
                          </tr>
                        </thead>
                        <tbody id="wadahFormKebisingan"></tbody>
                      </table>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Tutup
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <!-- ------------------------------------------------------------------------------------------------------------- -->
            <div class="modal fade" id="pencahayaan" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">FORM PENCAHAYAAN</h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <div class="mb-3">
                      <label for="pencahayaanPanjang" class="form-label"
                        >Panjang</label
                      >
                      <input
                        type="numer"
                        class="form-control"
                        name="pencahayaanPanjang"
                        id="pencahayaanPanjang"
                        value="0"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="pencahayaanLebar" class="form-label"
                        >Lebar</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        name="pencahayaanLebar"
                        id="pencahayaanLebar"
                        value="0"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="pencahayaanTinggi" class="form-label"
                        >Tinggi</label
                      >
                      <input
                        type="numer"
                        class="form-control"
                        name="pencahayaanTinggi"
                        id="pencahayaanTinggi"
                        value="0"
                      />
                    </div>
                    <div class="mb-3">
                      <label
                        for="pencahayaanJenisPencahayaan"
                        class="form-label"
                        >Jenis Pencahayaan</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        name="pencahayaanJenisPencahayaan"
                        id="pencahayaanJenisPencahayaan"
                      />
                    </div>
                    <div class="mb-3">
                      <label
