  <body id="body-pd" class="bg-light">
    <header class="header shadow" id="header">
      <div class="header__toggle">
        <i class="bx bx-menu" id="header-toggle"></i>
      </div>

      <div style="display: flex; align-items: center; justify-content: s">
        <div class="header__img">
          <img src="/img/perfil.jpg" alt="" />
        </div>
      </div>
    </header>

    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
        <div>
          <a href="/inspeksi" class="nav__logo">
            <i class="bx bx-briefcase nav__logo-icon"></i>
            <span class="nav__logo-name">Inspeksi K3 PPNS</span>
          </a>

          <div class="nav__list">
            <a href="/inspeksi" class="nav__link <%= menu === "inspeksi" ? "active" : "" %>">
              <i class="bx bx-search-alt"></i>
              <span class="nav__name">Inspeksi PLK</span>
            </a>
            <a href="/inspeksi/riwayat" class="nav__link <%= menu === "riwayat" ? "active" : "" %>">
              <i class="bx bx-history"></i>
              <span class="nav__name">Riwayat Pengukuran</span>
            </a>
            <% if (currentUser.status === "admin") { %>
              <a href="/inspeksi/kelola-tempat" class="nav__link <%= menu === "kelola-tempat" ? "active" : "" %>">
                <i class="bx bx-abacus"></i>
                <span class="nav__name">Kelola Tempat</span>
              </a>
            <% } %>
          </div>
        </div>

        <a href="/" class="nav__link">
          <i class="bx bx-log-out nav__icon"></i>
          <span class="nav__name">Kembali</span>
        </a>
      </nav>
    </div>